<% provide :title, t("static_pages.home.title") %>
<% if logged_in? %>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <%= render "shared/user_info" %>
      </section>
      <section class="micropost_form">
        <%= render "shared/micropost_form" %>
      </section>
    </aside>
    <div class="col-md-8">
      <h3><%= t ".content.feed" %></h3>
      <%= render "shared/feed" %>
    </div>
  </div>
<% else %>
  <h1><%= t ".title" %></h1>
  <h3><%= t "static_pages.home.content.welcome" %></h3>
  <p>
    <%=
      t(".content.main",
        rails_url: link_to(
          t(".content.rails"), Settings.links.rails.url).html_safe,
      ).html_safe
    %>
  </p>
<% end %>
